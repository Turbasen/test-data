# vi:syntax=json
{
  "extends": "airbnb-base",
  "env": {
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "modules": false
    }
  },
  "rules": {
    "strict": [2, "global"],
    "global-require": [0],
    "no-underscore-dangle": [2, { "allow": ["_id"] }]
  }
}
